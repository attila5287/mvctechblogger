
<div class="collapse" id="update_content">
<div class="form-group">
<h1 class="text-light mt-5">
<i class="title far fa-edit my-0"></i> 
update content
</div>
<hr class="border-primary border-med">

<form method="POST" action="/update/post" class="collapse show rounded-up border-light bg-primary border-med border-primary mt-0 mb-5 pt-4">
<div class="form-group">
  <label for=""></label>
  <select class="custom-select" name="" id="select_posted">
    <option> Previously posted content by the current user, choose which one to update.... </option>
    {{#each posts as |p|}}
    <option value="{{p.id}}"> {{p.title}} </option>
    {{/each}}
    
  </select>
</div>
<div class="form-group shadow-lg">
  <label for="title">
    <i class="fab fa-bimobject pr-0 text-xl"></i> Category</label>
  <label for="category_id"></label>
  <select class="custom-select form-control-dark" name="category_id" id="category_id">
    {{#each cats as |opt| }}
    <option value="{{opt.id}}">{{opt.category_name}}</`>
    {{/each}}
  </select>
</div>
<div class="form-group shadow-lg">
  <label for="post_topic"><i class="fab fa-bimobject pr-0 text-xl"></i> Topic</label>
  <select class="custom-select form-control-dark" name="post_topic" id="post_topic">
    {{#each post_topics as |t| }}
    <option value="{{t.value}}">{{t.option}}</option>
    {{/each}}
  </select>
</div>

<div class="form-group shadow-lg">
  <label for="title"><i class="fab fa-bimobject pr-0 text-xl"></i> Title</label>
  <input type="text" name="title" class="form-control form-control-dark" value="{{post.category.category_name}}" >
</div>
<div class="form-group shadow-lg">
  <label for="content"><i class="fab fa-bimobject pr-0 text-xl"></i> Content</label>
  <textarea type="text" name="content" class="form-control form-control-dark " >
    A posted blog content
    </textarea>
</div>
<div class="form-group shadow-lg">
  <input type="submit" value="Submit" class="px-5 btn btn-dark btn-lg btn-block rounded-xl shadow-lg">
</div>
<blockquote><p class="text-light text-ubu text-center text-lg">Post to your blog and live feed on app</p></blockquote>
</form>
</div>
