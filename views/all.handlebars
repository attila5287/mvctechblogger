<h1>
    <i class="fas fa-rss"></i>
    All Posts</h1>

<div class="card-columns">

    {{#each all as  |p|}}

    <div class="card bg-primary rounded-2xl mx-0 border-0">
        <div class="card-header pt-0 text-right font-weight-bold">
            <i class="fab fa-bimobject text-2xl fa-pull-left m-1"></i>
            {{p.category.category_name}}</div>
        <img class="card-img-top" src="{{p.user.img_url}}" alt="post-author">
        <div class="card-body bg-light">
            <div class="card-text text-right">
                <i class="fas fa-calendar"> </i>
                {{format_date p.date_created}}
                <span class="text-right font-weight-bold font-italic text-sm">
                    by
                    <i class="fas fa-user-edit"> </i>
                    {{p.user.name }}
                </span>
            </div>

            <h4 class="card-title text-ubu text-primary font-weight-bold">{{p.title}}
            </h4>
            <p class="card-text text-ubu">{{p.content}}</p>
        </div>
        {{#if p.replies}}
        <div class="card-footer text-right py-0">
            <button class="btn btn-primary" type="button" data-toggle="collapse"
                data-target="#replies_for_post_{{p.id}}" aria-expanded="false"
                aria-controls="replies_for_post_{{p.id}}">
                <i class="far fa-comment-dots text-2xl"></i>
                <small>Show/Hide Comments</small>
            </button>
            {{#each p.replies as |c|}}
            <div class="text-right collapse" id="replies_for_post_{{p.id}}">
                <i class="text-2xl far fa-comment-dots fa-pull-left"></i>
                <p class="text-sm">
                    {{c.comment}}
                </p>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="card-footer text-center">
            <i class="fas fa-comment-slash"></i>
            <small>No comments yet...</small>
        </div>
        {{/if}}
</div>

{{/each}}
</div>
