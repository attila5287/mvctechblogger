<form class="login-form text-xl font-italic bg-navy text-light rounded-3xl p-5 mx-5 mt-5"
>
  <div class="form-group">
    <h1>
      <i class="title fas fa-user-plus bg-light text-info p-1 rounded-xl"></i>
        Login
    </h1>
  </div>
  <div class="form-group">
    <label for="email-login">
      <i class="fas fa-envelope"></i>
      Email
    </label>
    <input
      class="form-control form-control-lg form-control-dark"
      id="email-login"
      type="email"
      name="email"
      placeholder="Type email here..."
    />
  </div>
  <div class="form-group">
    <label for="password-login">
      <i class="fas fa-key"></i>
      Password
    </label>
    <input
      class="form-control form-control-lg form-control-dark"
      id="password-login"
      type="password"
      name="password"
      placeholder="Type password here..."
    />
  </div>
  <div class="form-group">
    <input
      class="btn btn-info btn-block btn-lg"
      type="submit"
      value="Login to your account"
    />
  </div>
  <p class="text-sm text-secondary">
    <i class="fas fa-info-circle"></i>
    Not Registered yet? Please
<a href="/signup" class="px-2 text-lg text-light">
        <i class="fas fa-user-plus" aria-hidden="true"></i>
        Signup</a>    
  </p>
</form>



<div id = "login_success"  class="alert alert-warning alert-dismissible fade show d-none" role="alert">
       Login successful! Please refresh the page to unlock user features...
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<script src="/js/login.js"></script>

