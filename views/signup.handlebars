<form class="signup-form bg-dark text-light rounded-2xl text-xl font-italic p-5 mx-5 mt-5">
  <div class="form-group">
    <h1>
      <i class="title fas fa-user-plus bg-light text-dark p-1 rounded-xl"></i>
        Sign Up
    </h1>
  </div>
  <div class="form-group">
    <label for="name-signup">
      <i class="fas fa-user"></i>
      Name
    </label>
    <input class="form-control form-control-lg form-control-dark" type="text" name="name" id="name-signup" placeholder="Type username here"  />
  </div>
  <div class="form-group">
    <label for="gender">
      <i class="fas fa-venus-mars"></i>Gender
    </label>
      <select class="form-control form-control-dark" name="gender" id="gender">
        <option value="m">
          <i class="fas fa-mars"></i> m</option>
        <option value="f"><i class="fas fa-venus"></i>f</option>
      </select>
  </div>
  <div class="form-group">
    <label for="email-signup">
      <i class="fas fa-envelope"></i>
      Email
    </label>
    <input class="form-control form-control-lg form-control-dark" type="email" name="email" id="email-signup" placeholder="Type email here..."/>
  </div>
  <div class="form-group">
    <label for="password-signup">
      <i class="fas fa-key"></i>
      Password
    </label>
    <input class="form-control form-control-lg form-control-dark" type="password" name="password" id="password-signup" placeholder="Type password here..."/>
  </div>

  <div class="form-group">
    <input class="btn btn-primary btn-block btn-lg" type="submit"  value="Create account"/>
  </div>

  <p class="text-sm text-secondary">
    <i class="fas fa-info-circle"></i>
    Registered already? Please 
    <a href="/login" class="px-2 text-lg text-light">
    <i class="fas fa-sign-in-alt" aria-hidden="true"></i>
    Login</a>
  </p>
  </form>

<div id = "signup_success"  class="alert alert-warning alert-dismissible fade show d-none" role="alert">
       Signup successful! Please refresh the page to unlock user features...
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<script src="/js/signup.js"></script>
